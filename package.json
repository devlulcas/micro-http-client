{
	"name": "nano-http-client",
	"version": "4.0.0",
	"description": "A nano http client for node.js and the browser based on fetch",
	"packageManager": "pnpm@8.8.0",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"sanitize": "prettier --write . && eslint --fix . && tsc --noEmit && vitest run",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"test-server": "tsx ./tests/mocks/server.ts"
	},
	"type": "module",
	"keywords": [
		"http",
		"client",
		"fetch",
		"node",
		"browser",
		"micro",
		"typesafe"
	],
	"author": "Lucas Alves Rego",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./base": {
			"types": "./dist/base.d.ts",
			"import": "./dist/base.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@hono/node-server": "^1.2.0",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"hono": "^3.7.5",
		"prettier": "^3.0.3",
		"tsup": "^7.2.0",
		"tsx": "^3.13.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	}
}
